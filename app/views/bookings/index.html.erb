<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Lesson date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.lesson_date %></td>
        <td><%= booking.start_time.hour %>:<%= booking.start_time.min %></td>
        <td><%= booking.end_time.hour %>:<%= booking.end_time.min %></td>
        <td><%= booking.profile.user.first_name %> <%= booking.profile.user.last_name %></td>
        <td><%= link_to 'Edit', edit_profile_booking_path(@profile, booking) %></td>
        <td><%= link_to 'Destroy', profile_booking_url(@profile, booking), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
