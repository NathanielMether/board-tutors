<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :profile_image %>
    <%= form.file_field :profile_image, id: :profile_profile_image %>
  </div>

  <div class="field">
    Remove attachment: <%= form.check_box :remove_profile_image %>
  </div>

  <div class="field">
    <%= form.label :board_sport %>
    <%= form.select :board_sport, ['surfing', 'snow boarding'], id: :profile_board_sport %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :profile_price %>
  </div>

  <div class="field">
    <%= form.label :locations %>
    <%= form.text_field :locations, id: :profile_locations %>
  </div>

  <div class="field">
    <%= form.label :bio %>
    <%= form.text_area :bio, id: :profile_bio %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :profile_description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
